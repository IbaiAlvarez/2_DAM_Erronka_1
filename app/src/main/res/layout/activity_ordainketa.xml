<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ordainketa">

    <EditText
        android:id="@+id/txt_urteaO"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:width="250sp"
        android:height="65sp"
        android:ems="10"
        android:hint="AÃ‘O"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.327"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_dataO" />

    <EditText
        android:id="@+id/txt_HilabeteaO"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:width="250sp"
        android:height="65sp"
        android:ems="10"
        android:hint="MES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_dataO" />

    <EditText
        android:id="@+id/txt_CVVO"
        android:layout_width="250sp"
        android:layout_height="65sp"
        android:layout_marginTop="24dp"
        android:width="250sp"
        android:height="65sp"
        android:ems="10"
        android:hint="CVV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_HilabeteaO" />

    <EditText
        android:id="@+id/txt_zenbakiTxartelaO"
        android:layout_width="250sp"
        android:layout_height="65sp"
        android:layout_marginTop="20dp"
        android:width="250sp"
        android:height="65sp"
        android:ems="10"
        android:hint="Numero de tarjeta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_IzenAbizenaO" />

    <EditText
        android:id="@+id/txt_IzenAbizenaO"
        android:layout_width="250sp"
        android:layout_height="65sp"
        android:layout_marginTop="80dp"
        android:width="250sp"
        android:height="65sp"
        android:ems="10"
        android:hint="Nombre y apellidos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Ordaindu" />

    <TextView
        android:id="@+id/txt_Ordaindu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Ordainketa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ordainduO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="PAGAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_CVVO" />

    <Button
        android:id="@+id/btn_atzeraO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="ATRAS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ordainduO" />

    <TextView
        android:id="@+id/txt_dataO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="FECHA CADUCIDAD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_zenbakiTxartelaO" />

</androidx.constraintlayout.widget.ConstraintLayout>