<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".InfoErabiltzailea">

    <EditText
        android:id="@+id/txt_erabiltzaile_InfoErabiltzaile"
        android:layout_width="250sp"
        android:layout_height="65sp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_email_InfoErabiltzailea" />

    <EditText
        android:id="@+id/txt_email_InfoErabiltzailea"
        android:layout_width="250sp"
        android:layout_height="65sp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Correo electrÃ³nico"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_abizen_InfoErabiltzaile" />

    <EditText
        android:id="@+id/txt_abizen_InfoErabiltzaile"
        android:layout_width="250sp"
        android:layout_height="65sp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Apellidos"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_izen_InfoErabiltzaile" />

    <EditText
        android:id="@+id/txt_izen_InfoErabiltzaile"
        android:layout_width="250sp"
        android:layout_height="65sp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_infoErabiltzaile" />

    <ImageView
        android:id="@+id/logo_infoErabiltzaile"
        android:layout_width="228dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/erronka_1_ikonoa" />

    <Button
        android:id="@+id/btn_erabiltzaileAldatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/botoiKolore"
        android:text="Cambiar"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_erabiltzaile_InfoErabiltzaile" />

    <Button
        android:id="@+id/btn_erabiltzaileEzabatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/botoiKolore"
        android:text="Eliminar"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_erabiltzaileAldatu"
        app:layout_constraintTop_toBottomOf="@+id/txt_erabiltzaile_InfoErabiltzaile" />

    <Button
        android:id="@+id/btn_AtzeraInfoErabiltzaile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/botoiKolore"
        android:text="Atras"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_erabiltzaileEzabatu" />
</androidx.constraintlayout.widget.ConstraintLayout>