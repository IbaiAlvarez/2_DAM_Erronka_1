<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">

    <EditText
        android:id="@+id/edt_erabiltzaiela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="155dp"
        android:ems="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_pasahitza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="303dp"
        android:layout_marginBottom="177dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btn_volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/erabiltzailea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="23dp"
        android:text="ERABILTZAIELA"
        app:layout_constraintBottom_toTopOf="@+id/edt_erabiltzaiela"
        app:layout_constraintStart_toStartOf="@+id/edt_erabiltzaiela" />

    <TextView
        android:id="@+id/pasahitza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="15dp"
        android:text="PASAHITZA"
        app:layout_constraintBottom_toTopOf="@+id/edt_pasahitza"
        app:layout_constraintStart_toStartOf="@+id/edt_pasahitza" />

    <Button
        android:id="@+id/btn_iniciar"
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="432dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="123dp"
        android:text="SAIOA HASI"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="142dp"
        android:layout_height="50dp"
        android:text="ATZERA"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="525dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>